{
  "name": "a-player-dashboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "node server.cjs",
    "start": "node server.cjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "docs": "powershell -ExecutionPolicy Bypass -File ../scripts/run_docs_simple.ps1",
    "docs:schema": "make schema -C ..",
    "docs:types": "make types -C ..",
    "docs:clean": "make clean -C ..",
    "db:dump": "powershell -ExecutionPolicy Bypass -File ../scripts/db/dump_schema.ps1 -OutRoot ../Docs",
    "db:docs": "powershell -ExecutionPolicy Bypass -File ../scripts/db/gen_docs.ps1 -OutRoot ../Docs",
    "db:refresh": "powershell -ExecutionPolicy Bypass -Command \"& { ../scripts/db/dump_schema.ps1 -OutRoot ../Docs; ../scripts/db/gen_docs.ps1 -OutRoot ../Docs }\""
  },
  "dependencies": {
    "@react-pdf/renderer": "^3.4.5",
    "@sentry/react": "^9.40.0",
    "@sentry/vite-plugin": "^3.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "@types/file-saver": "^2.0.7",
    "compression": "^1.7.4",
    "date-fns": "^4.1.0",
    "express": "^4.19.2",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "pg": "^8.16.3",
    "posthog-js": "^1.257.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf": "^10.0.1",
    "react-router-dom": "^7.6.3",
    "recharts": "^3.1.0",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
